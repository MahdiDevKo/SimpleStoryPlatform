@page "/"
@page "/home"

@rendermode InteractiveServer

@code {
    List<StoryPreviewDto>? lastStories;

    public StorySearchOptionsDtoSearchRequest optionsDto = new StorySearchOptionsDtoSearchRequest();

    int helperVariable;
    StoryPreviewDtoPageResponse? storyPageReponse;

    protected override async Task OnInitializedAsync()
    {
        //getting last sotries
        try
        {
            var apires = await clientAli.LastStoriesAsync();

            if (apires.Success)
            {
                lastStories = apires.Items.ToList();
            }
            else
                msgService.ShowMessage(apires.Message, "error");
        }
        catch (Exception e)
        {
            msgService.ShowMessage(e.Message, "error");
        }

        StateHasChanged();

        await base.OnInitializedAsync();
    }

    async Task LoadPage(int page = 1)
    {
        try
        {
            optionsDto.PageNumber = page;

            var apires = await clientAli.SearchResultAsync(optionsDto);

            if (apires.Success)
            {
                storyPageReponse = apires;
                lastStories = null;
            }
            else
                msgService.ShowMessage(apires.Message, "error");
        }
        catch (Exception e)
        {
            msgService.ShowMessage(e.Message, "error");
        }
    }
}

@if (lastStories != null)
{
    <div class="stories-container">
        <div>
            <p>آخرین داستان های منتشر شده:</p>

        </div>

        @foreach (var story in lastStories)
        {
            <div class="story-card">
                <div class="story-image">
                    <img src="/images/default-story.jpg" alt="Story image" />
                </div>

                <div class="story-content">
                    <div class="story-info">
                        <h4>@story.Name</h4>
                        <p>@story.Preview</p>
                    </div>

                    <div class="story-writer">
                        <div class="writer-name">
                            <span>@story.Writer.FirstName @story.Writer.LastName</span>
                        </div>
                        <div class="writer-username">
                            <p>@story.Writer.Username</p>
                        </div>
                    </div>
                    <a href="ReadStory/@story.PublicId">
                        <button>
                            جزییات و مطالعه
                        </button>
                    </a>

                </div>
            </div>
        }
    </div>

}
else if(storyPageReponse.Items != null)
{
    <div class="stories-container">
        <div>
            <p>آخرین داستان های منتشر شده:</p>

        </div>

        @foreach (var story in storyPageReponse.Items)
        {
            <div class="story-card">
                <div class="story-image">
                    <img src="/images/default-story.jpg" alt="Story image" />
                </div>

                <div class="story-content">
                    <div class="story-info">
                        <h4>@story.Name</h4>
                        <p>@story.Preview</p>
                    </div>

                    <div class="story-writer">
                        <div class="writer-name">
                            <span>@story.Writer.FirstName @story.Writer.LastName</span>
                        </div>
                        <div class="writer-username">
                            <p>@story.Writer.Username</p>
                        </div>
                    </div>
                    <a href="ReadStory/@story.PublicId">
                        <button>
                            جزییات و مطالعه
                        </button>
                    </a>

                </div>
            </div>
        }
    </div>

    <span>
        @for (int i = 0; i < storyPageReponse.TotalPages; i++)
        {
            helperVariable = i + 1;
            <button @onclick="() => LoadPage(helperVariable)">@(i + 1)</button>
        }
    </span>
}
else
{
    <h3>درحال بارگذاری هستیم. لطفا صبر کنید</h3>
}
<style>

    .stories-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        padding: 10px;
        text-align: right;
    }

    .story-card {
        display: flex;
        background: #f8f8f8;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
        height: 180px;
    }

    .story-image {
        width: 35%;
        background: #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .story-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .story-content {
        width: 65%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 12px 16px;
    }

    .story-info {
        flex: 0 0 65%;
    }

        .story-info h4 {
            margin: 0;
            font-size: 1.2em;
            color: #333;
        }

        .story-info p {
            margin-top: 6px;
            color: #666;
            font-size: 0.95em;
        }

    .story-writer {
        flex: 0 0 35%;
        border-top: 1px solid #e0e0e0;
        padding-top: 8px;
    }

    .writer-name span {
        font-weight: bold;
        color: #444;
    }

    .writer-username p {
        margin: 4px 0 0;
        color: #777;
        font-size: 0.9em;
    }

</style>
