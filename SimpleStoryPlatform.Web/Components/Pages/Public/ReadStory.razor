<h3>ReadStory</h3>
@page "/ReadStory/{storyGuid:guid}"
@rendermode InteractiveServer

@code {
    StoryDetailsDto? story;
    StoryReviewCreateDto commentDto = new StoryReviewCreateDto();
    [Parameter]
    public Guid? storyGuid { get; set; }

    string? commentReportText;
    string? storyReportText;
    protected override async Task OnInitializedAsync()
    {
        if (storyGuid == null) { msgService.ShowMessage("ورودی نامعتبر است.", "error"); StateHasChanged(); return; }

        await RefreshInformation();

        await base.OnInitializedAsync();
    }

    async Task RefreshInformation(int pageIndex = 0)
    {
        try
        {
            var apiRes = await clientAli.ReadStoryAsync(storyGuid);

            story = apiRes.Data;

            OpenPage(pageIndex);

            StateHasChanged();

        }
        catch (Exception e)
        {
            msgService.ShowMessage(e.Message, "error");
        }
    }

    bool next = true, past = false;
    int CurrentIndex;
    void OpenPage(int index)
    {
        if (index > -1 && index < story.Data.Count)
        {
            CurrentIndex = index;
            currentSection = story.Data.ToList()[index];
            next = index < story.Data.Count - 1;
            past = index > 0;
            StateHasChanged();
        }
    }

    StorySectionDto? currentSection;

    void GoToPlayList(Guid? playListGuid)
    {
        Navigation.NavigateTo($"StoryPlayList/{playListGuid}");
    }

    async Task SubmitComment()
    {
        //condition check
        if (commentDto.Data.Length > 0 && commentDto.Score > 0 && commentDto.Score <= 5)
        {
            commentDto.StoryGuid = (Guid)storyGuid;
            try
            {
                var apiRes = await clientAli.AddReviewAsync(commentDto);

                if (apiRes.Success)
                {
                    await RefreshInformation();
                    msgService.ShowMessage(apiRes.Message, "success");
                }
                else
                    msgService.ShowMessage(apiRes.Message, "error");
            }
            catch (Exception e) { msgService.ShowMessage(e.Message, "error"); }

        }
        else
        {
            msgService.ShowMessage("اطلاعات برای ایجاد کامنت صحیح نمیباشد", "error");
        }
    }

    async void ReportComment(Guid commentGuid)
    {
        UserReportDto dto = new UserReportDto()
        {
            ObjectGuid = commentGuid,
            Text = commentReportText
        };

        try
        {

            var apiRes = await clientAli.ReportReviewAsync(dto);
            if (apiRes.Success)
            {
                commentReportText = "";
                msgService.ShowMessage(apiRes.Message, "success");
                StateHasChanged();
            }
        }
        catch (Exception e) { msgService.ShowMessage(e.Message, "error"); }
    }

    async void ReportStory(Guid storyGuid)
    {
        UserReportDto dto = new UserReportDto()
        {
            ObjectGuid = storyGuid,
            Text = storyReportText
        };

        try
        {

            var apiRes = await clientAli.ReportStoryAsync(dto);
            if (apiRes.Success)
            {
                commentReportText = "";
                msgService.ShowMessage(apiRes.Message, "success");
                StateHasChanged();
            }
        }
        catch (Exception e) { msgService.ShowMessage(e.Message, "error"); }
    }
    //chatGPT Section
    bool showStoryReport = false;

    // برای هر کامنت یک لیست ذخیره می‌کنیم که کدام‌ها باز هستند
    HashSet<Guid> showCommentReport = new();

    void toggleCommentReport(Guid commentId)
    {
        if (showCommentReport.Contains(commentId))
            showCommentReport.Remove(commentId);
        else
            showCommentReport.Add(commentId);
    }
}



@if (story != null)
{
    <div class="story-page">

        <!-- ===== هدر داستان ===== -->
        <div class="story-header">
            <div class="story-title">
                <h2>@story.Name</h2>

                <!-- دکمه گذارش کنار نام داستان -->
                <button class="report-toggle-btn" @onclick="() => showStoryReport = !showStoryReport">
                    ⚠
                </button>

                @if (showStoryReport)
                {
                    <div class="story-report-section">
                        <textarea @bind="storyReportText" placeholder="علت گذارش (اختیاری)" class="comment-report-input"></textarea>
                        <button class="comment-submit" @onclick="() => ReportStory(story.PublicId)">ارسال گذارش</button>
                    </div>
                }

                <p class="story-preview">@story.Preview</p>
            </div>

            <div class="story-writer">
                <p class="writer-label">نویسنده:</p>
                <div class="writer-info">
                    <span class="writer-name">@story.Writer.FirstName @story.Writer.LastName</span>
                    <p class="writer-username">@story.Writer.Username</p>
                </div>
            </div>
        </div>

        <hr class="story-divider" />

        <!-- سمت چپ: تصویر -->
        <div class="story-image">
            <img src="@((!string.IsNullOrEmpty(currentSection.BgImageUrl)) ? $"/images/storySections/{currentSection.BgImageUrl}" : "/images/storySectionsDef.jpg")" alt="Background image" />
        </div>

        <!-- سمت راست: متن و دکمه‌ها -->
        <div class="story-text">
            <p class="narration">@currentSection.Narration</p>

            <div class="story-buttons">
                <button class="nav-button" disabled="@(past == false)" @onclick="() => OpenPage(CurrentIndex - 1)">قسمت قبل</button>
                <button class="nav-button" disabled="@(next == false)" @onclick="() => OpenPage(CurrentIndex + 1)">قسمت بعد</button>
            </div>
        </div>

        <!-- ===== بخش کامنت ===== -->
        <div class="comments-section">

            <div class="comment-add">
                <div class="rating-container">
                    @for (float i = 0.5f; i <= 5; i += 0.5f)
                    {
                        float local = i;
                        <span class="star @(commentDto.Score >= local ? "active" : "")"
                              @onclick="() => commentDto.Score = local">★</span>
                    }
                </div>

                <textarea @bind="commentDto.Data" placeholder="نظر خود را بنویسید..." class="comment-input"></textarea>
                <button class="comment-submit" @onclick="SubmitComment">ثبت نظر</button>
            </div>

            @if (story.Reviews != null)
            {
                @foreach (var comment in story.Reviews)
                {
                    <div class="comment">
                        <div class="comment-header">
                            <span class="comment-name">@comment.User.FirstName @comment.User.LastName</span>

                            <!-- دکمه گذارش کنار نام کامنت -->
                            <button class="report-toggle-btn" @onclick="() => toggleCommentReport(comment.PublicId)">
                                ⚠
                            </button>

                            <p class="comment-username">@comment.User.Username</p>
                        </div>

                        @if (showCommentReport.Contains(comment.PublicId))
                        {
                            <div class="story-report-section">
                                <textarea @bind="commentReportText" placeholder="علت گذارش (اختیاری)" class="comment-report-input"></textarea>
                                <button class="comment-submit" @onclick="() => ReportComment(comment.PublicId)">ارسال گذارش</button>
                            </div>
                        }

                        <p class="comment-text">@comment.Data</p>
                        <p class="comment-time">نوشته شده در: @((DateTime.Now - comment.CreatedAt).Days) روز پیش</p>
                    </div>
                }
            }
        </div>
    </div>
}


